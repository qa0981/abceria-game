<Image>:
    allow_stretch: True

<StartScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg.png"
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint: 0.9, None
        height: 900
        pos_hint: {"center_x": 0.5, "center_y": 0.65}

        Image:
            id: animasi1
            source: "buttons/helicopter.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.9, "center_y": 0.1}

        Image:
            id: animasi2
            source: "buttons/abacus.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.3, "center_y": 0.9}

        Image:
            id: animasi3
            source: "buttons/kite.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.08, "center_y": 0.7}

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            size_hint: None, None
            width: 800
            height: 600
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: "image/logo1.png"
                allow_stretch: True
                size_hint: None, None
                size: 650, 450
                pos_hint: {"center_x": 0.5}

            BoxLayout:
                orientation: "vertical"
                spacing: 20
                size_hint: None, None
                width: 250
                height: 350
                pos_hint: {"center_x": 0.5}

                ClickableImage:
                    source: "image/playy.png"
                    allow_stretch: True
                    size_hint: None, None
                    size: 250, 100
                    pos_hint: {"center_x": 0.5}
                    on_press: root.on_button_click("play")

                ClickableImage:
                    source: "image/option.png"
                    allow_stretch: True
                    size_hint: None, None
                    size: 250, 100
                    pos_hint: {"center_x": 0.5}
                    on_press: root.open_options_popup()

                ClickableImage:
                    source: "image/quit.png"
                    size_hint: None, None
                    size: 200, 120
                    pos_hint: {"center_x": 0.5}
                    on_press: root.on_button_click("quit")

<OptionsPopup@Popup>:
    title: "Options"
    size_hint: 0.7, 0.7
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Options"
            font_size: 24
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50
            Label:
                text: "Sound Volume"
                size_hint_x: 0.5
            Slider:
                id: sound_slider
                min: 0
                max: 1
                value: 0.5
                step: 0.05
                size_hint_x: 0.5

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50
            Label:
                text: "Music Volume"
                size_hint_x: 0.5
            Slider:
                id: music_slider
                min: 0
                max: 1
                value: 0.5
                step: 0.05
                size_hint_x: 0.5

        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            size_hint_y: None
            height: 50
            Button:
                text: "Reset to Defaults"
                size_hint_x: 0.5
                on_press:
                    root.ids.sound_slider.value = 0.5
                    root.ids.music_slider.value = 0.5

            Button:
                text: "Save & Close"
                size_hint_x: 0.5
                on_press: root.dismiss()

<GameScreen>:
    coin_count: "100"
    username: "Player"

    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/bg_next.png"
                size: self.size
                pos: self.pos

        Image:
            source: "image/logo1.png"
            size_hint: None, None
            size: 750, 300
            pos_hint: {"center_x": 0.5, "top": 0.95}
            allow_stretch: True

        FloatLayout:
            size_hint: None, None
            size: 150, 50
            pos_hint: {"x": 0.02, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

            Image:
                source: "buttons/koin.png"
                size_hint: None, None
                size: 40, 40
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.coin_count
                font_size: 54
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 110, 50
                pos_hint: {"x": 0.5, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        FloatLayout:
            size_hint: None, None
            size: 300, 50
            pos_hint: {"right": 0.98, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

            Image:
                source: "buttons/tameng.png"
                size_hint: None, None
                size: 40, 40
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.username
                font_size: 54
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 200, 50
                pos_hint: {"x": 0.3, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        ClickableImage:
            source: "buttons/arrow_left.png"
            size_hint: None, None
            size: 100, 100
            pos_hint: {"x": 0.02, "y": 0.02}
            on_press: root.go_to_start_menu()

        FloatLayout:
            size_hint: None, None
            size: 900, 450
            pos_hint: {"center_x": 0.49, "center_y": 0.35}

            GridLayout:
                cols: 3
                spacing: 30
                size_hint: None, None
                size: 900, 180
                pos_hint: {"center_x": 0.5, "top": 1}

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game1()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game2()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game3()

            GridLayout:
                cols: 2
                spacing: 40
                size_hint: None, None
                size: 660, 180
                pos_hint: {"center_x": 0.5, "y": 0}

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game4()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game5()

