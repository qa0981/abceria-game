<Image>:
    allow_stretch: True

<StartScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg.png"
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint: 0.9, None
        height: 900
        pos_hint: {"center_x": 0.5, "center_y": 0.65}

        Image:
            id: animasi1
            source: "buttons/helicopter.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.9, "center_y": 0.1}

        Image:
            id: animasi2
            source: "buttons/abacus.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.3, "center_y": 0.9}

        Image:
            id: animasi3
            source: "buttons/kite.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.08, "center_y": 0.7}

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            size_hint: None, None
            width: 800
            height: 600
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: "image/logo1.png"
                allow_stretch: True
                size_hint: None, None
                size: 650, 450
                pos_hint: {"center_x": 0.5}

            BoxLayout:
                orientation: "vertical"
                spacing: 20
                size_hint: None, None
                width: 250
                height: 350
                pos_hint: {"center_x": 0.5}

                ClickableImage:
                    source: "image/playy.png"
                    allow_stretch: True
                    size_hint: None, None
                    size: 250, 100
                    pos_hint: {"center_x": 0.5}
                    on_press: root.on_button_click("play")

                ClickableImage:
                    source: "image/option.png"
                    allow_stretch: True
                    size_hint: None, None
                    size: 250, 100
                    pos_hint: {"center_x": 0.5}
                    on_press: root.open_options_popup()

                ClickableImage:
                    source: "image/quit.png"
                    size_hint: None, None
                    size: 200, 120
                    pos_hint: {"center_x": 0.5}
                    on_press: root.on_button_click("quit")

<OptionsPopup@Popup>:
    title: "Options"
    size_hint: 0.7, 0.7
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Options"
            font_size: 24
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50
            Label:
                text: "Sound Volume"
                size_hint_x: 0.5
            Slider:
                id: sound_slider
                min: 0
                max: 1
                value: 0.5
                step: 0.05
                size_hint_x: 0.5

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50
            Label:
                text: "Music Volume"
                size_hint_x: 0.5
            Slider:
                id: music_slider
                min: 0
                max: 1
                value: 0.5
                step: 0.05
                size_hint_x: 0.5

        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            size_hint_y: None
            height: 50
            Button:
                text: "Reset to Defaults"
                size_hint_x: 0.5
                on_press:
                    root.ids.sound_slider.value = 0.5
                    root.ids.music_slider.value = 0.5

            Button:
                text: "Save & Close"
                size_hint_x: 0.5
                on_press: root.dismiss()

<GameScreen>:
    coin_count: "100"
    username: "Player"

    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/bg_next.png"
                size: self.size
                pos: self.pos

        Image:
            source: "image/logo1.png"
            size_hint: None, None
            size: 750, 300
            pos_hint: {"center_x": 0.5, "top": 0.95}
            allow_stretch: True

        FloatLayout:
            size_hint: None, None
            size: 150, 50
            pos_hint: {"x": 0.02, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

            Image:
                source: "buttons/koin.png"
                size_hint: None, None
                size: 40, 40
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.coin_count
                font_size: 54
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 110, 50
                pos_hint: {"x": 0.5, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        FloatLayout:
            size_hint: None, None
            size: 300, 50
            pos_hint: {"right": 0.98, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

            Image:
                source: "buttons/tameng.png"
                size_hint: None, None
                size: 40, 40
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.username
                font_size: 54
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 200, 50
                pos_hint: {"x": 0.3, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        MagicImage:
            source: "buttons/arrow_left.png"
            size_hint: None, None
            size: 100, 100
            pos_hint: {"x": 0.02, "y": 0.02}
            on_release: self.wobble_and_navigate(root.go_to_start_menu)

        FloatLayout:
            size_hint: None, None
            size: 900, 450
            pos_hint: {"center_x": 0.49, "center_y": 0.35}

            GridLayout:
                cols: 3
                spacing: 30
                size_hint: None, None
                size: 900, 180
                pos_hint: {"center_x": 0.5, "top": 1}

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_release: root.start_game1()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game2()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game3()

            GridLayout:
                cols: 2
                spacing: 40
                size_hint: None, None
                size: 660, 180
                pos_hint: {"center_x": 0.5, "y": 0}

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game4()

                ClickableImage:
                    source: "image/menu1.png"
                    size_hint: None, None
                    size: 320, 200
                    on_press: root.start_game5()

<Game1Screen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, 0.1
            padding: 10

            Label:
                text: "Game 1"
                font_size: 24

            Button:
                text: "Back"
                size_hint: None, None
                size: 100, 50
                on_press: root.go_back()

        GridLayout:
            cols: 5
            spacing: 10
            padding: 20

            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/1.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/2.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/3.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/4.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/5.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/6.mp3"
            ImageButton:
                source: "image/huruf/button/a.png"
                sound_path: "image/voice_ alfabet/7.mp3"
            

<LevelSelectionPopup>:
    size_hint: 0.8, 0.8
    auto_dismiss: False
    title: ""
    separator_color: 0, 0, 0, 0
    separator_height: 0
    background: "image/bgp.png"

    FloatLayout:
        Image:
            source: "image/title/1.png"
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": 0.5, "top": 0.98}

        GridLayout:
            cols: 3
            spacing: 25
            size_hint: 0.8, 0.5
            pos_hint: {"center_x": 0.62, "top": 0.7}

            Button:
                background_normal: "buttons/button_level/1.png"
                size_hint: None, None
                size: 260, 270
                on_release: root.select_level(1)

            Button:
                background_normal: "buttons/button_level/2.png"
                size_hint: None, None
                size: 250, 250
                on_release: root.select_level(2)

            Button:
                background_normal: "buttons/button_level/3.png"
                size_hint: None, None
                size: 250, 250
                on_release: root.select_level(3)

        Button:
            text: "Close"
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "y": 0.1}
            background_color: app.rgb(217, 162, 67)
            color: app.rgb(255, 255, 255)
            on_release: root.dismiss()

<TracingScreen>:
    name: "tracing"

    FloatLayout:
        Image:
            source: "image/bab1/jiplak/a.png"
            size_hint: None, None
            size: 300, 300
            pos_hint: {"center_x": 0.5, "top": 0.95}

        TracingWidget:
            id: tracing_area
            size_hint: 1, 0.7
            pos_hint: {"center_x": 0.5, "y": 0.15}

        # Buttons at the bottom
        Button:
            text: "Clear"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.1, "y": 0.02}
            on_release: root.clear_canvas()

        Button:
            text: "Back"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.6, "y": 0.02}
            on_release: app.root.current = "level_selection"

<NameInputScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg1.png"
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint: 0.9, None
        height: 500
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Image:
            id: animasi1
            source: "buttons/helicopter.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.05, "center_y": 0.9}

        Image:
            id: animasi2
            source: "buttons/abacus.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.9, "center_y": 0.1}

        TextInput:
            id: username_input
            hint_text: "Enter your name"
            hint_text_color: app.rgb(255, 222, 169)
            foreground_color: app.rgb(255, 222, 169)
            cursor_color: app.rgb(255, 222, 169)
            background_color: app.rgb(217, 162, 67)
            font_size: "30sp"
            font_name: "fonts/SplashBakery.otf"
            size_hint: 0.6, None
            height: 70
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            multiline: False
            halign: "center"
            padding: [10, 15]

        MagicImage:
            id: start_button
            source: "image/start1.png"
            size_hint: None, None
            size: 200, 120
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.submit_username(username_input.text)

<LevelOneScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/bg_level1.png"  # Background image for Level 1
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 5
            spacing: 10
            padding: [20, 20, 20, 20]
            size_hint: 0.9, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

            Button:
                background_normal: "image/bab1/huruf/a.png"
                background_down: "alphabet_images/A_pressed.png"
                size_hint: None, None
                size: 100, 100
                on_release: root.play_sound("image/voice_ alfabet/huruf_A.mp3")

            Button:
                background_normal: "alphabet_images/B.png"
                background_down: "alphabet_images/B_pressed.png"
                size_hint: None, None
                size: 100, 100
                on_release: root.play_sound("sounds/B.mp3")

            # Repeat for all letters C-Z
            Button:
                background_normal: "alphabet_images/C.png"
                background_down: "alphabet_images/C_pressed.png"
                size_hint: None, None
                size: 100, 100
                on_release: root.play_sound("sounds/C.mp3")

        Button:
            text: "Back"
            size_hint: None, None
            size: 120, 50
            pos_hint: {"x": 0.02, "y": 0.02}
            background_color: app.rgb(217, 162, 67)
            on_release: app.go_back_to_level_selection()