<NameInputScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg1.png"
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint: 0.9, None
        height: 500
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Image:
            id: animasi1
            source: "buttons/helicopter.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.05, "center_y": 0.9}

        Image:
            id: animasi2
            source: "buttons/abacus.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.9, "center_y": 0.1}

        TextInput:
            id: username_input
            hint_text: "Enter your name"
            hint_text_color: app.rgb(255, 222, 169)
            foreground_color: app.rgb(255, 222, 169)
            cursor_color: app.rgb(255, 222, 169)
            background_color: app.rgb(217, 162, 67)
            font_size: "30sp"
            font_name: "fonts/SplashBakery.otf"
            size_hint: 0.6, None
            height: 70
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            multiline: False
            halign: "center"
            padding: [10, 15]

        MagicImage:
            id: start_button
            source: "image/start1.png"
            size_hint: None, None
            size: 200, 120
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.submit_username(username_input.text)
