<Image>:
    allow_stretch: True

<StartScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg.png"
            size: self.size
            pos: self.pos

    FloatLayout:
        BoxLayout:
            orientation: "vertical"
            spacing: dp(30)
            size_hint: 1, 0.65
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                id: anim1
                source: "buttons/kite.png"
                size_hint: None, None
                size: 150, 150
                pos_hint: {"center_x": 0.8, "center_y": 0.8}

            Image:
                id: anim2
                source: "buttons/alphabetical.png"
                size_hint: None, None
                size: 170, 170
                pos_hint: {"center_x": 0.1, "center_y": 0.2}

        BoxLayout:
            orientation: "vertical"
            spacing: dp(1)
            size_hint: 0.5, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: "image/logo1.png"
                allow_stretch: True
                size_hint: 0.8, 0.8
                pos_hint: {"center_x": 0.5, "center_y": 0.85}

            BoxLayout:
                orientation: "vertical"
                spacing: dp(15)
                size_hint: 1, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.8}

                MagicImage:
                    source: "image/playy.png"
                    allow_stretch: True
                    size_hint: 1, None
                    height: dp(35)
                    pos_hint: {"center_x": 0.5}
                    on_release: self.wobble_and_navigate(root.start_game)

                MagicImage:
                    source: "image/option.png"
                    allow_stretch: True
                    size_hint: 1, None
                    height: dp(35)
                    pos_hint: {"center_x": 0.5}
                    on_release: self.wobble_and_navigate(root.open_options_popup)

                MagicImage:
                    source: "image/quit.png"
                    allow_stretch: True
                    size_hint: 1, None
                    height: dp(35)
                    pos_hint: {"center_x": 0.5}
                    on_release: self.wobble_and_navigate(root.quit_app)

<OptionsPopup>:
    title: "Options"
    size_hint: 0.7, 0.7
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Options"
            font_size: 24
            size_hint_y: None
            height: 50

        # Music Volume Slider
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50
            Label:
                text: "Music Volume"
                size_hint_x: 0.5
            ImageSlider:
                id: music_slider
                min: 0
                max: 1
                value: app.music_volume
                step: 0.05
                size_hint_x: 0.5
                track_image: 'buttons/bar-volume-ctrl1.png'
                handle_image: 'buttons/btn-volume-ctrl.png'
                on_value: root.on_music_volume_change(self, self.value)

        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            size_hint_y: None
            height: 50
            Button:
                size_hint_x: 0.7
                background_normal: 'buttons/btn-reset.png' 
                background_down: 'buttons/btn-reset.png'
                on_press: root.reset_to_defaults()

            Button:
                size_hint_x: 0.5
                background_normal: 'buttons/btn-save.png'
                background_down: 'buttons/btn-save.png'
                on_press: root.dismiss()

<GameScreen>:
    coin_count: root.coin_count
    username: root.username

    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/bg_next.png"
                size: self.size
                pos: self.pos

        Image:
            source: "image/logo1.png"
            size_hint: None, None
            size: 350, 300
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            allow_stretch: True

        FloatLayout:
            size_hint: None, None
            size: 100, 30
            pos_hint: {"x": 0.02, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15]

            Image:
                source: "buttons/koin.png"
                size_hint: None, None
                size: 18, 18
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: f"{root.coin_count}"
                font_size: sp(14)
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 80, 50
                pos_hint: {"x": 0.5, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        FloatLayout:
            size_hint: None, None
            size: 140, 30
            pos_hint: {"right": 0.98, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15]

            Image:
                source: "buttons/tameng.png"
                size_hint: None, None
                size: 18, 18
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.username
                font_size: sp(14)
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 80, 50
                pos_hint: {"x": 0.4, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        MagicImage:
            source: "buttons/arrow_left.png"
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {"x": 0.02, "y": 0.02}
            on_release: root.go_to_start_menu()

        FloatLayout:
            size_hint: None, None
            size: 600, 300
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            GridLayout:
                cols: 3
                spacing: dp(30)
                size_hint: None, None
                size: 600, 180
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                ClickableImage:
                    source: "image/menu-1.png"
                    size_hint: None, None
                    size: dp(100), dp(200)
                    on_release: root.start_game1()

                ClickableImage:
                    source: "image/menu-2.png"
                    size_hint: None, None
                    size: dp(100), dp(200)
                    on_press: root.start_game2()

                ClickableImage:
                    source: "image/menu-3.png"
                    size_hint: None, None
                    size: dp(100), dp(200)
                    on_press: root.start_game3()


<Game1Screen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/game1.png"
                size: self.size
                pos: self.pos

        Image:
            source: "image/title/1.png"
            size_hint: None, None
            size: 250, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.87}
            allow_stretch: True

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.3, "top": 0.1}
            padding: [20, 10]
            spacing: 10

        MagicImage:
            source: "buttons/arrow_left.png"
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {"x": 0.02, "y": 0.02}
            on_release: self.wobble_and_navigate(root.go_back)

<LevelSelectionPopup>:
    size_hint: 0.8, 0.8
    auto_dismiss: False
    title: ""
    separator_color: 0, 0, 0, 0
    separator_height: 0
    background: "image/bgp.png"

    FloatLayout:
        Image:
            source: "image/title/1.png"
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": 0.5, "top": 0.98}

        GridLayout:
            cols: 3
            spacing: 25
            size_hint: 0.8, 0.5
            pos_hint: {"center_x": 0.62, "top": 0.7}

            Button:
                background_normal: "buttons/button_level/1.png"
                size_hint: None, None
                size: 260, 270
                on_release: root.select_level(1)

            Button:
                background_normal: "buttons/button_level/2.png"
                size_hint: None, None
                size: 250, 250
                on_release: root.select_level(2)

            Button:
                background_normal: "buttons/button_level/3.png"
                size_hint: None, None
                size: 250, 250
                on_release: root.select_level(3)

        Button:
            text: "Close"
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "y": 0.1}
            background_color: app.rgb(217, 162, 67)
            color: app.rgb(255, 255, 255)
            on_release: root.dismiss()

#:import Window kivy.core.window.Window

<TracingScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "image/game2.png"
                size: self.size
                pos: self.pos

        Image:
            source: f"image/huruf/huruf_polos/{root.letter_number}.png"
            size_hint: None, None
            size: Window.width * 0.4, Window.height * 0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

        FloatLayout:
            size_hint: None, None
            size: 80, 20
            pos_hint: {"x": 0.02, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

            Image:
                source: "buttons/koin.png"
                size_hint: None, None
                size: 18, 18
                pos_hint: {"x": 0.04, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: f"{root.score}"
                font_size: 14
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 80, 50
                pos_hint: {"x": 0.4, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size

        FloatLayout:
            size_hint: None, None
            size: 80, 20
            pos_hint: {"right": 0.98, "top": 0.98}
            canvas.before:
                Color:
                    rgba: (217 / 255, 162 / 255, 67 / 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

            Image:
                source: "buttons/tameng.png"
                size_hint: None, None
                size: 18, 18
                pos_hint: {"x": 0.05, "center_y": 0.5}
                allow_stretch: True

            Label:
                text: root.username
                font_size: 14
                font_name: "fonts/SplashBakery.otf"
                color: (255 / 255, 222 / 255, 169 / 255, 1)
                size_hint: None, None
                size: 80, 50
                pos_hint: {"x": 0.4, "center_y": 0.5}
                halign: "left"
                valign: "middle"
                text_size: self.size


        TracingWidget:
            id: tracing_area
            size_hint: 0.9, 0.6
            pos_hint: {"center_x": 0.5, "top": 0.9}
            line_width: custom_slider.value

        BoxLayout:
            orientation: "horizontal"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            spacing: 20
            padding: [10, 0]

            CustomSlider:
                id: custom_slider
                size_hint: 0.5, None
                height: 25
                min: 1
                max: 10
                value: 2

        Button:
            text: "Clear"
            font_size: "22sp"
            font_name: "fonts/SplashBakery.otf"
            size_hint: None, None
            size: Window.width * 0.15, Window.height * 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.28}
            on_release: root.clear_canvas()

        MagicImage:
            source: "buttons/arrow_right.png"
            size_hint: None, None
            size: Window.width * 0.05, Window.width * 0.05
            pos_hint: {"x": 0.9, "y": 0.02}
            on_release: self.wobble_and_navigate(root.go_to_next_letter)

        MagicImage:
            source: "buttons/arrow_left.png"
            size_hint: None, None
            size: Window.width * 0.05, Window.width * 0.05
            pos_hint: {"x": 0.02, "y": 0.02}
            on_release: self.wobble_and_navigate(root.go_back)

<CustomSlider@Slider>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: "buttons/btn3.png"
            size: self.size
            pos: self.pos

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: "buttons/btn2.png"
            size: (self.width * self.value_normalized, self.height)
            pos: self.pos

    Image:
        source: "buttons/btn1.png"
        size_hint: None, None
        size: 31, 31
        pos: root.value_pos[0] - self.width / 2, root.center_y - self.height / 2


<NameInputScreen>:
    canvas.before:
        Rectangle:
            source: "image/bg1.png"
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint: 0.9, None
        height: 500
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Image:
            id: animasi1
            source: "buttons/helicopter.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.05, "center_y": 0.9}

        Image:
            id: animasi2
            source: "buttons/abacus.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.9, "center_y": 0.1}

        TextInput:
            id: username_input
            hint_text: "Enter your name"
            hint_text_color: app.rgb(255, 222, 169)
            foreground_color: app.rgb(255, 222, 169)
            cursor_color: app.rgb(255, 222, 169)
            background_color: app.rgb(217, 162, 67)
            font_size: "30sp"
            font_name: "fonts/SplashBakery.otf"
            size_hint: 0.6, None
            height: 70
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            multiline: False
            halign: "center"
            padding: [10, 15]

        MagicImage:
            id: start_button
            source: "image/start1.png"
            size_hint: None, None
            size: 200, 120
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.submit_username(username_input.text)